<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>The weather</title>
  <link rel="stylesheet" href="css/home.css" />
</head>

<body id="body">
  <div class="app" id="app">
    <nav class="nav_container">
      <h2>Your weather</h2>
      <ul class="nav_list">
        <li><a href="/">Home</a></li>
        {{#if user}}
        <li><a href="/profile">Profile</a></li>
        <li><a href="/logout">Logout</a></li>
        {{else}}
        <li><a href="/login">Login</a></li>
        <li><a href="/register">Register</a></li>
        {{/if}}
      </ul>
    </nav>

    <div class="app_container">
      <!-- upper part -->
      <div class="app_container-top">
        <!-- create form -->
        <form class="location-form" id="location-form">
          <input type="text" class="location-form_input" id="location-form_input" placeholder="Location" required />
          <button class="location-form_button" id="location-form-button">
            <svg class="location-form_icon" width="20" height="20" viewBox="0 0 26 26" fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <g clip-path="url(#clip0_15_152)">
                <rect width="24" height="24" fill="transparent" />
                <circle cx="10.5" cy="10.5" r="6.5" stroke="#000000" stroke-linejoin="round" />
                <path
                  d="M19.6464 20.3536C19.8417 20.5488 20.1583 20.5488 20.3536 20.3536C20.5488 20.1583 20.5488 19.8417 20.3536 19.6464L19.6464 20.3536ZM20.3536 19.6464L15.3536 14.6464L14.6464 15.3536L19.6464 20.3536L20.3536 19.6464Z"
                  fill="#333333" />
              </g>
            </svg>
          </button>
        </form>
      </div>
      <!-- lower part -->
      <div class="app_container-bottom" id="cards-box">
        <!-- card -->
      </div>
    </div>
  </div>

  <script defer type="module" src="js/home.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>

